@page
@model ProyectoCiclo3.App.Frontend.Pages.EditServicioModel
@{
    var servicio = Model.Servicio;
}

<div class="text-center">
    <form method="post">
        <label for="id" class="form-label">Id:</label>
        <input type="number" class="form-control" id="id" name="id" placeholder="id" asp-for="@servicio.id">
        <label for="Origen" class="form-label">Origen:</label>
        <input type="number" class="form-control" id="origen" name="origen" placeholder="Origen" asp-for="@servicio.origen">
        <label for="Destino" class="form-label">Destino:</label>
        <input type="number" class="form-control" id="destino" name="destino" placeholder="Destino" asp-for="@servicio.destino">
        <label for="Fecha" class="form-label">Tipo:</label>
        <input type="date" class="form-control" id="fecha" name="fecha" placeholder="Fecha" asp-for="@servicio.fecha">
        <label for="Hora" class="form-label">Hora:</label>
        <input type="time" class="form-control" id="hora" name="hora" placeholder="Hora" asp-for="@servicio.hora">
        <label for="Encomienda" class="form-label">Encomienda:</label>
        <input type="number" class="form-control" id="encomienda" name="encomienda" placeholder="Encomienda" asp-for="@servicio.encomienda">
        <hr>
        <button type="submit" class="btn btn-success">Enviar</button>
    </form>
</div>