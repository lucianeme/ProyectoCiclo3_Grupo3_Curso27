@page
@model ProyectoCiclo3.App.Frontend.Pages.FormUsuarioModel
@{
    var usuario = Model.Usuario;
}

 @* Prueba Jhon *@
<div class="text-center">
<form action="POST">
  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" asp-for="Usuario.nombre">
  <label for="apellidos" class="form-label">Apellidos:</label>
  <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellidos" asp-for="Usuario.apellidos">
  <label for="direccion" class="form-label">Dirección:</label>
  <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Dirección" asp-for="Usuario.direccion">
  <label for="telefono" class="form-label">Teléfono:</label>
  <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono" asp-for="Usuario.telefono">
  <label for="ciudad" class="form-label">Ciudad:</label>
  <input type="ciudad" class="form-control" id="ciudad" name="ciudad" placeholder="Ciudad">
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>