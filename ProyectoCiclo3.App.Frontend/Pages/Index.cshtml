@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Usuarios</h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <img src="https://image.flaticon.com/icons/png/512/16/16363.png" style="width:150px;height:150px">
            </ul>
            <a class="w-100 btn btn-lg btn-primary" asp-page="./Usuario/Create">Crear nuevo usuario</a>
            <a class="w-100 btn btn-lg btn-outline-primary" asp-page="./Usuario/List">Ver listado usuarios</a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Encomiendas</h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <img src="https://img.icons8.com/metro/208/box.png" style="width:150px;height:150px">
            </ul>
            <a class="w-100 btn btn-lg btn-primary" asp-page="./Encomienda/Create">Crear nueva encomienda</a>
            <a class="w-100 btn btn-lg btn-outline-primary" asp-page="./Encomienda/List">Ver listado encomiendas</a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Servicios</h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <img src="https://image.flaticon.com/icons/png/512/44/44266.png" style="width:150px;height:150px">
            </ul>
            <a class="w-100 btn btn-lg btn-primary" asp-page="./Servicio/Create">Crear nuevo servicio</a>
            <a class="w-100 btn btn-lg btn-outline-primary" asp-page="./Servicio/List">Ver listado servicios</a>
          </div>
        </div>
      </div>
    </div>

</div>
